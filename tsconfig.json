{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Add this line to specify the base directory as the root
    "paths": {
      "vedpatel/*": ["./src/*"],         // Existing alias
      "@types/*": ["types/*"],           // Alias for types
      "@components/*": ["components/*"], // Alias for components
      "@pages/*": ["pages/*"],           // Alias for pages
      "@lib/*": ["lib/*"]                // Alias for lib
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
